<Window x:Class="Authentication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="UserName" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,42,0,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="100,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="100,41,0,0" VerticalAlignment="Top" Width="120" Height="27"/>
        <Label Content="Role" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,73,0,0"/>
        <ComboBox x:Name="comboRole" HorizontalAlignment="Left" Margin="100,77,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="General" />
            <ComboBoxItem Content="Member" />
        </ComboBox>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="89" Height="24" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="131,124,0,0" VerticalAlignment="Top" Width="89" Height="24" Click="btnExit_Click"/>
    </Grid>
</Window>
